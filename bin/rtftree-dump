foreach (array(__DIR__.'/../vendor/autoload.php', __DIR__.'/../../../vendor/autoload.php') as $autoload) {
    if (is_readable($autoload)) {
        require_once $autoload;
        break;
    }
}

$arguments = $_SERVER['argv'];
array_shift($arguments);
if (empty($arguments)) {
    echo "Please provide the richtext document first!\n";
    exit();
}
if (!is_readable($file = $arguments[0])) {
    echo "Can't access file or file not found!\n";
    exit();
}

use NTLAB\RtfTree\Node\Tree;

$tree = new Tree();
$tree->setIgnoreMalformed(true);
$tree->setIgnoreWhitespace(false);
if (!$tree->loadFromFile($file)) {
    echo "Not a valid document!\n";
    exit();
}

echo $tree->toStringEx();